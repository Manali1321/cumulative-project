
@{
    ViewBag.Title = "New";
}
<style>
    #welcomeForm {
        width: 80%;
        margin: 0 auto;
        margin-top: 80px;
    }
    .inputrow {
        margin-bottom: 15px;
        width: 40%;
        overflow: hidden;
    }

        .inputrow input {
            float: right;
        }
        .inputrow input[type="submit"] {
            float: none;
            margin-top: 50px;
        }
</style>
<div id="welcomeForm">
    <nav>
        <a class="navlink" href="/Teacher/List">Back To Teacher</a>
    </nav>

    <h2>New Teacher</h2>

    <form method="POST" action="/Teacher/Create">
        <div class="inputrow">
            <label>First name:</label>
            <input type="text" id="TeacherFname" name="TeacherFname" />
        </div>

        <div class="inputrow">
            <label>Last name:</label>
            <input type="text" id="TeacherLname" name="TeacherLname" />
        </div>

        <div class="inputrow">
            <label>Hire Date:</label>
            <input type="datetime" id="HireDate" name="HireDate" />
        </div>

        <div class="inputrow">
            <label>Salary:</label>
            <input type="number" id="Salary" name="Salary" step="any" />
        </div>
        <div class="inputrow">
            <label>EmployeeNumber:</label>
            <input type="text" id="EmployeeNumber" name="EmployeeNumber" />
        </div>

        <div class="inputrow">
            <input type="submit" value="Create Teacher" />
        </div>
    </form>
</div>
